pipeline {
   agent any
   tools {
      maven "3.9.4"
      jdk "java"
   }
    triggers {
        cron('0 8 1 * *')
    }
   stages {
      stage('Testing') {
         steps {
            git branch: "main", url: 'https://github.com/kirillorlov1205/qase-automation.git'
            bat "mvn -Dmaven.test.failure.ignore=true -Dbrowser=chrome -Dsurefire.suiteXmlFiles=src/test/resources/testngConfigs/api-test.xml clean test"
         }
         post {
            success {
               junit '**/target/surefire-reports/TEST-*.xml'
            }
         }
      }
      stage('Reporting') {
         steps {
             script {
                     allure([
                             includeProperties: false,
                             jdk: '',
                             properties: [],
                             reportBuildPolicy: 'ALWAYS',
                             results: [[path: 'target/allure-results']]
                     ])
             }
         }
      }
   }
}